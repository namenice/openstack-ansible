component_skel:
  elasticsearch:
    belongs_to:
      - elasticsearch_all
  kibana:
    belongs_to:
      - kibana_all
  logstash:
    belongs_to:
      - logstash_all


container_skel:
  kibana_container:
    belongs_to:
      - logging_containers
    contains:
      - kibana
    properties:
      is_metal: true
      service_name: kibana
  logstash_container:
    belongs_to:
      - logging_containers
    contains:
      - logstash
    properties:
      is_metal: true
      service_name: logstash
  elasticsearch_container:
    belongs_to:
      - logging_containers
    contains:
      - elasticsearch
    properties:
      is_metal: true
      service_name: elasticsearch

physical_skel:
  logging_containers:
    belongs_to:
      - all_containers
  logging_hosts:
    belongs_to:
      - hosts
